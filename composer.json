{
    "name": "bolt/thumbs",
    "description": "Small package based on GD to handle thumbnail resizes",
    "license": "MIT",
    "authors": [
        {
            "name": "Ross Riley",
            "email": "riley.ross@gmail.com"
        }
    ],

    "minimum-stability": "dev",

    "require": {
        "symfony/http-foundation": "~2.5",
        "ext-gd": "*"
    },

    "require-dev": {
        "bolt/bolt": "~2.0"
    },

    "autoload": {
        "psr-4": {
            "Bolt\\Thumbs\\": "src",
            "Bolt\\Thumbs\\Tests\\": "tests"
        }
    },

    "extra": {
        "branch-alias": { "dev-master": "3.0-dev" }
    }
}
